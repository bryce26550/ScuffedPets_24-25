<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your pet, ButterDog!</title>
    <style>
        body {
            background-color: green;
        }

        #butternessBox {
            font-size: 30px;
            color: yellow;
            text-align: center;
            margin-top: 20px;
        }

        #happinessBox {
            font-size: 30px;
            color: white;
            text-align: center;
            margin-top: 20px;
        }

        .buttering {
            border-radius: 15px;
            font-size: 50px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin-top: 20px;
        }

        .butterDog {
            display: block;
            height: 65%;
            bottom: 20px;
            width: auto;
            margin-left: auto;
            margin-right: auto;
        }

        .map-button {
            position: absolute;
            top: 10px;
            right: 10px;
            border-radius: 15px;
            font-size: 20px;
            padding: 10px 20px;
        }

        .logout-button {
            position: absolute;
            top: 10px;
            left: 10px;
            border-radius: 15px;
            font-size: 20px;
            padding: 10px 20px;
        }
    </style>
</head>
<script>
    let butterness = 50;
    let happiness = 50;
    let alertShown = false; // Flag to track if alert has been shown

    let unButterInterval = setInterval(unButter, 5000);
    function unButter() {
        if (butterness > 0) {
            butterness -= 1;
        }
    };

    let unHappyInterval = setInterval(unHappy, 2000);
    function unHappy() {
        if (happiness > 0) {
            happiness -= 1;
        }
    };

    let checkStatusInterval = setInterval(checkStatus, 1); // Check status every second
    function checkStatus() {
        if (butterness <= 0) {
            butterness = 0;
        } else if (butterness > 100) {
            butterness = 100;
        }
        if (happiness <= 0) {
            happiness = 0;
        } else if (happiness > 100) {
            happiness = 100;
        }
        document.getElementById("butternessBox").innerHTML = "Butterness: " + butterness;
        document.getElementById("happinessBox").innerHTML = "Happiness: " + happiness;
        if ((butterness <= 0 || happiness <= 0) && !alertShown) {
            clearInterval(unButterInterval); // Stop unButter interval
            clearInterval(unHappyInterval); // Stop unHappy interval
            clearInterval(checkStatusInterval); // Stop checkStatus interval
            document.querySelector(".butterDog").src = "img/deadDog.jpeg"; // Change image source
            alert("YOU MONSTER! YOU LET BUTTERDOG DIE!");
            alertShown = true; // Set the flag to true after showing the alert
        }
    };

    function logout() {
        // Implement logout functionality here
        window.location.href = '/logout'; // Redirect to the logout page
    }

    function changeDatDog(event) {
        const selectedImage = document.getElementById('imageSelect').value;
        document.querySelector(".butterDog").src = selectedImage;
    }

    function useButter() {
        if (butter > 0) {
            butter--;
            butterness += 10;
            document.getElementById("butterCount").innerText = "Butter: " + butter;
        } else {
            alert("You have no butter left!");
        }
    }
</script>
<!-- move to line 132 inside the scr when ready to countinue working on the issue: session.selectedImage ||  -->

<body>
    <img src="<%= selectedImage %>" alt="Butter Dog" class="butterDog">
    <div id="butternessBox"></div>
    <div id="happinessBox"></div>
    <div class="button-container">
        <button class="buttering" onclick="butterness ++">Butter Dat DoG!</button>
        <button class="buttering" onclick="happiness++, butterness -= 1">Play with Dat Dog</button>
        <button class="buttering" onclick="window.location.href='/paintPet'">Change Dat Dog</button>
        <button class="buttering" onclick="useButter()">Use Butter</button>
        <div id="butterCount">Butter: <%= butter %>
        </div>
    </div>
    <button class="map-button" onclick="window.location.href='/map'">Map</button>
    <button class="logout-button" onclick="logout()">Logout</button>
</body>

</html>